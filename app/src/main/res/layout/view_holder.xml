<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/settings_row_1_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/settings_row_1_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/settings_row_1_icon"
        android:textColor="@color/DarkThemeColorPrimary"
        android:text=""
        android:gravity="left|center_vertical"
        android:layout_centerVertical="true"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/settings_row_1_text2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/settings_row_1_disclosure"
        android:layout_toEndOf="@+id/settings_row_1_text"
        android:textColor="@color/CDDarkThemeColorSecondary"
        android:text=""
        android:gravity="right|center_vertical"
        android:layout_centerVertical="true"
        android:textSize="18dp" />


</RelativeLayout>